<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
            <style>
                body {
                    font-family: 'Montserrat', sans-serif;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    font-size: 17px;
                }
                nav {
                    display: flex;
                    position: sticky;
                    top: 10px;
                    flex-direction: row;
                    border-radius: 5px;
                    width: 100%;
                    margin: 5px;
                }
                #top-menu {
                    justify-content: space-between;
                    background-color: #102E44;
                }
                #top-menu-options {
                    display: flex;
                    align-items: flex-start;
                    flex-direction: row;
                }
                #top-menu-option {
                    margin-right: 10px;
                    padding: 15px;
                }
                #top-menu-option:hover {
                    background-color: #005596;
                }
                #top-menu a {
                    color: #fff;
                    text-decoration: none;
                }
                #top-menu a:hover {
                    color: #c0c0c0;
                    text-decoration: none;
                    text-shadow: 0 0 5px 5px #555555;
                }
                #user-info {
                    padding: 15px;
                    background-color: #005596;
                    border-radius: 5px;
                    color: #fff;
                    border-left: 1px solid #c0c0c0;
                }
                .user-element {
                    margin-left: 10px;
                    margin-right: 15px;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <nav id="top-menu">
                <div id="top-menu-options">
                    <div id="top-menu-option">
                        <a href="{{ path('app_catalogs_home') }}">Strona główna</a>
                    </div>
                    {% if not is_granted('ROLE_GOD') %}
                        <div id="top-menu-option">
                            <a href="{{ path('app_add_report') }}">Wyślij zgłoszenie</a> -
                        </div>
                    {% endif %}
                    {% if is_granted('ROLE_EDITOR') %}
                        <div id="top-menu-option">
                            <a href="{{ path('app_show_report') }}">Zgłoszenia</a>
                        </div>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div id="top-menu-option">
                            <a href="{{ path('app_manage_users') }}">Użytkownicy</a>
                        </div>
                        <div id="top-menu-option">
                            <a href="{{ path('app_show_system') }}">Systemodawcy</a>
                        </div>
                    {% endif %}
                    {% if is_granted('ROLE_GOD') %}
                    <div id="top-menu-option">
                        <a href="{{ path('app_manage_requests') }}">Prośby o rejestrację</a>
                    </div>
                        <div id="top-menu-option">
                            <a href="{{ path('app_show_report_category') }}">Kategorie zgłoszeń</a>
                        </div>
                    {% endif %}
                </div>
                <div id="top-menu-options">
                    <div id="user-info">
                        <span class="user-element">{{ app.user.email }}</span>
                        <span class="user-element"><a href="{{ path('app_logout') }}">Wyloguj</a></span>
                        <span></span>
                    </div>
                </div>

            </nav>
            <main>
            </main>
        {% endblock %}

    </body>
</html>
