{% extends 'base.html.twig' %}
{% set caption = 'Prośby o rejestrację' %}
{% block title %}{{ caption }}{% endblock %}

{% block body %}
    {{ parent () }}
    <main>
        <h1>{{ caption }}</h1>
        {% if requests %}
            <table>
        {% for request in requests %}

                <tr>
                    <td>
                        {{ request.email }}
                    </td>


                        <td class="button-cell">
                            {% if not request.isAccepted %}
                            <a href="{{ path('app_request_confirm', {'id':request.id}) }}">Zatwierdź</a>
                            {% endif %}
                        </td>

                    <td class="button-cell">
                        <a href="{{ path('app_request_deny', {'id':request.id}) }}">Usuń</a>
                    </td>
                </tr>

        {% endfor %}
            </table>
        {% else %}
        <h2>Nic do wyświetlenia</h2>
        {% endif %}
    </main>
{% endblock %}
