{% extends 'base.html.twig' %}

{% block title %}Hello ReportCategoryController!{% endblock %}

{% block body %}
    {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ message }}</h1>
    <ul>
        <li><a href="{{ path('app_add_report_category')}}">Dodaj</a></li>
    {% if categories %}
        {% for category in categories %}
        <li>{{ category.name }}
            {% if is_granted('ROLE_GOD') %}
                - <a href="{{ path('app_edit_report_category', {'id':category.id}) }}">Edytuj</a> -
                <a href="{{  path('app_delete_report_category', {'id':category.id}) }}">Usu≈Ñ</a>
            {% endif %}
        </li>
        {% endfor %}
    {% endif %}
    </ul>
</div>
{% endblock %}
