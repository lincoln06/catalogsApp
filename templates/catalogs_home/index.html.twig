{% extends 'base.html.twig' %}

{% block title %}Hello CatalogsHomeController!{% endblock %}

{% block body %}
    {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul>
        {% for system in systems %}
            <li class="system">{{ system.name }}

                <ul>
                    {% for catalog in catalogs[system.name] %}
                        <li class="system"><a href="{{ asset('uploads/pdfFiles/' ~ catalog.pdfFile) }}" target="_blank">{{ catalog.name }}</a>
                            {% if is_granted('ROLE_EDITOR') %}
                                - <a href="{{ path('app_edit_catalog', {'id':catalog.id}) }}">Edytuj</a> -
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>

            </li>
        {% endfor %}
        <ul>
</div>
{% endblock %}
