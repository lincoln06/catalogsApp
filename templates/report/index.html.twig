{% extends 'base.html.twig' %}
{% set caption = 'Zgłoszenia' %}
{% block title %}{{ caption }}{% endblock %}

{% block body %}
    {{ parent() }}
    <main>
        <h1>{{ caption }}</h1>

        {% if reports %}
            <table>
            {% for report in reports %}

                    <tr class="table-header">
                        <td>
                            {{ report.category.name }}
                        </td>
                        <td class="button-cell">
                            <a href="{{ path('app_solve_report', {'id':report.id}) }}">Rozwiąż</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="topic-cell">
                            {{ report.topic }}
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="description-cell">
                            {{ report.description }}
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" class="author-cell">
                            {{ report.reportFrom }}
                        </td>
                    </tr>

            {% endfor %}
            </table>
            {% else %}
            <h2>Nic do wyświetlenia</h2>
        {% endif %}
    </main>
{% endblock %}
